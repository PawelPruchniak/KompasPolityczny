<resources>

    <!-- Base application theme. -->
    <style name="Theme.PC" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
    </style>

    <style name="Widget.PC.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.PC.TextInputLayout.HintText</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="boxStrokeColor">@color/textInputOutlineColor</item>
    </style>

    <style name="TextAppearance.PC.Title" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="TextAppearance.PC.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Widget.PC.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="backgroundTint">?attr/colorPrimaryDark</item>
        <item name="cornerRadius">@dimen/radius_medium</item>
    </style>

    <style name="Widget.PC.Button.StrongAgree" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">#ffffff</item>
        <item name="backgroundTint">@color/buttonStrongAgree</item>
        <item name="cornerRadius">@dimen/radius_medium</item>
    </style>

    <style name="Widget.PC.Button.Agree" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">#ffffff</item>
        <item name="backgroundTint">@color/buttonAgree</item>
        <item name="cornerRadius">@dimen/radius_medium</item>
    </style>

    <style name="Widget.PC.Button.Disagree" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">#ffffff</item>
        <item name="backgroundTint">@color/buttonDisgree</item>
        <item name="cornerRadius">@dimen/radius_medium</item>
    </style>

    <style name="Widget.PC.Button.StrongDisagree" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">#ffffff</item>
        <item name="backgroundTint">@color/buttonStrongDisagree</item>
        <item name="cornerRadius">@dimen/radius_medium</item>
    </style>

    <style name="Widget.PC.Button.Neutral" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">#ffffff</item>
        <item name="backgroundTint">@color/buttonNeutral</item>
        <item name="cornerRadius">@dimen/radius_medium</item>
    </style>

    <style name="Widget.PC.Button.Delete" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/buttonDisgree</item>
        <item name="cornerRadius">@dimen/radius_medium</item>
    </style>

    <style name="Widget.PC.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorAccent</item>
        <item name="android:theme">@style/Theme.PC</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="titleTextAppearance">@style/TextAppearance.PC.Toolbar</item>
    </style>

    <style name="TextAppearance.PC.Toolbar" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
    </style>

</resources>